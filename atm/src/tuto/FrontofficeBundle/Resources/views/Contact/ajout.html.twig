{% extends ":front:Front.html.twig" %}
{% block title %}Contactez-nous{% endblock  %}
{% block body %}
    <section class="wrapper padding50">
        <div class="container">
            {{form_start(form,{'attr':{'id':'form2','role':'form'}})}}
            <style>
                .required:after { content:" *";
                                  color:red; }
                </style>

                <div class="row" style="margin-top: 15px">
                <div class="col-md-8">
                    {% for label, flashes in app.session.flashbag.all %}
                        {% for flash in flashes %}
                            <div class="alert alert-{{label}}">
                                <button class="close" data-dismiss="alert">×</button>
                                <strong>{{ label|title }} !!!</strong> :  {{ flash }}

                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">          
                    <div class="row">
                        <div class="col-md-9">

                            {{ form_row(form.nom,{ 'label': 'Nom:'},{'attr':{'placeholder':'Donnez votre nom  '}}) }}
                        </div>
                    </div>

                    <br>
                    <div class="row">
                        <div class="col-md-9">

                            {{ form_row(form.prenom,{ 'label': 'Prénom:'},{'attr':{'placeholder':'Donnez votre prénom  '}}) }}
                        </div>
                    </div>

                    <br>
                    <div class="row">
                        <div class="col-md-9">
                            {{ form_row(form.email,{ 'label': 'Email:'},{'attr':{'placeholder':'Donnez votre email  '}}) }}
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-md-9">
                            {{ form_row(form.commentaire,{'attr':{'placeholder':'Donnez votre commentaire  '}}) }}
                        </div>
                    </div>
                    <br>
                    
                    <div>

                        <button type="submit" class="caption lft button orange glossy slide_btn slide_item_left" value="{{ 'change_password.submit'|trans }}"><h3><font color="white"><b>Envoyer</b></font></h3></button> <b><font color="red">  champ obligatoire *  </font></b>
                    </div>
                    <style>
                        .button.orange {
                            width: 170px;
                            height:70px;
                            background-color: #FF4500;

                        }
                    </style></div>
                <div class="row">
                    {{ form_end(form) }}
                    <div class="col-md-3">
                        <h2><b>Contactez-nous</b></h2>
                        <address class="margin-bottom-40">
                            <h3>   ADRESSE : </h3>
                            <br>
