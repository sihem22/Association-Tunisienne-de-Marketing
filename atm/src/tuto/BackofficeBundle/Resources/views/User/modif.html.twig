{% extends ":back:base.html.twig" %}
{% block title %}Administrateur{% endblock  %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb">
                        <li>
                            <i class="clip-home-2"></i>
                            <a href="{{path('tuto_frontoffice_homepage')}}">
                                Front Office
                            </a>
                        </li>
                        <li class="active">
                            <i><b>  Back Office </b> </i>
                        </li>

                    </ol>
                </div>
            </div>
        </div>
        <br>

        <br>
        <div class="row">
            <div class="col-md-12">
                <!-- start: FORM VALIDATION 1 PANEL -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-external-link-square"></i>
                        Modifier un Utilisateur
                        <div class="panel-tools">
                            <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
                            </a>
                            <a class="btn btn-xs btn-link panel-config" href="#panel-config" data-toggle="modal">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <a class="btn btn-xs btn-link panel-refresh" href="#">
                                <i class="fa fa-refresh"></i>
                            </a>
                            <a class="btn btn-xs btn-link panel-expand" href="#">
                                <i class="fa fa-resize-full"></i>
                            </a>
                            <a class="btn btn-xs btn-link panel-close" href="#">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">



                        {{form_start(form,{'attr':{'id':'form2','role':'form'}})}}


                        <div class="left">
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Nom,{ 'label': 'Nom / Lastname :','attr':{'placeholder':'Donner le nom '}}) }}
                                </div>
                            </div>
                            <br>
                              <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Prenom,{ 'label': 'Prénom / Firstname :','attr':{'placeholder':'Donner le nom '}}) }}
                                </div>
                            </div>
                                <br>
                                <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Civilite,{ 'label': 'Genre / Gender :'}) }}
                                </div>
                            </div>
                                <br>
                            <div class="row">

                                <div class="col-md-7">
                                    {{ form_label(form.Image)}}:
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="input-group">
                                            <div class="form-control uneditable-input">
                                                <i class="fa fa-file fileupload-exists"></i>
                                                <span class="fileupload-preview"></span>
                                            </div>

                                            {{ form_errors(form.Image) }}


                                            <div class="input-group-btn">
                                                <div class="btn btn-light-grey btn-file">
                                                    <span class="fileupload-new"><i class="fa fa-folder-open-o"></i> Select image</span>
                                                    <span class="fileupload-exists"><i class="fa fa-folder-open-o"></i> Change</span>
                                                    {{ form_widget(form.Image) }}
                                                </div>

                                                <a href="#" class="btn btn-light-grey fileupload-exists" data-dismiss="fileupload">
                                                    <i class="fa fa-times"></i> Remove
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </div>

                            <br>
                           
                           
                            <br>



                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Pays,{ 'label': 'Pays/Country :'})}}
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Discipline,{ 'label': 'Domaine de Recherche :'})}}
                                </div>

                            </div> 
                                <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Statut,{ 'label': 'Statut/Status :'})}}
                                </div></div>
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Universite,{ 'label': 'Université :'})}}
                                </div></div>
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Institution,{ 'label': 'Institution :'})}}
                                </div></div>
                            <br>
                              
                                
                               
                            <div class="row">
                                <div class="col-md-8">
                                    
                                    {{ form_rest(form) }}
                                    <style>
                                        .required:after { content:" *";
                                                          color:red; }
                                        </style>
                                    </div>
                            </div></div>
                                <br>
                                 <a href="#myModal" role="button" class="btn btn-large btn-primary" data-toggle="modal">Modifier</a> <font color="red"><i class="fa fa-warning faa-flash animated"></i> 

                        champ obligatoire * </font>

                        <!-- Modal HTML -->
                        <div id="myModal" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title">Confirmation</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>Voulez vous enregistrer les modifications?</p>
                                        <p class="text-warning"><small>Si vous n'enregistrez pas ,vos modifications seront perdues.</small></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">NON</button>
                                        <button class="demo btn btn-blue" data-toggle="modal" >OUI</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div> <style>
                 textarea, input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"],  input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"] {




                                    font-size: 14px;

                                    padding: 10px 10px;

                                    width:  800px ;
                                    margin-top: 10px;
                                    display: flow-root;}
                                select {

                                    width: 800px;
                                    padding: 15px;

                                }
                                 label {
                            font-size: 20px;
                            color: #222;
                        }
                </style>
                               


                            </style>
                            {{ form_end(form) }}

                        

                    </div>
                </div>
            </div>
     

{% endblock %}

