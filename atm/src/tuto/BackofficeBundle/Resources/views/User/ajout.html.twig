{% extends ":back:base.html.twig" %}
{% block title %}Administrateur{% endblock  %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb">
                        <li>
                            <i class="clip-home-2"></i>
                            <a href="{{path('tuto_frontoffice_homepage')}}">
                                Front Office
                            </a>
                        </li>
                        <li class="active">
                            <i><b>  Back Office </b> </i>
                        </li>

                    </ol>
                </div>
            </div>
        </div>
        <br>

        <br>
        <div class="row">
            <div class="col-md-12">
                <!-- start: FORM VALIDATION 1 PANEL -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-external-link-square"></i>
                        Ajouter un Administrateur
                        <div class="panel-tools">
                            <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
                            </a>
                            <a class="btn btn-xs btn-link panel-config" href="#panel-config" data-toggle="modal">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <a class="btn btn-xs btn-link panel-refresh" href="#">
                                <i class="fa fa-refresh"></i>
                            </a>
                            <a class="btn btn-xs btn-link panel-expand" href="#">
                                <i class="fa fa-resize-full"></i>
                            </a>
                            <a class="btn btn-xs btn-link panel-close" href="#">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">



                        {{form_start(form,{'attr':{'id':'form2','role':'form'}})}}


                        <div class="left">
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Nom,{ 'label': 'Nom /Lastname  :','attr':{'placeholder':'Donner le nom '}}) }}
                                </div>
                            </div>
                            <br>
                             <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Prenom,{ 'label': 'Nom et Prénom/firstname and name :','attr':{'placeholder':'Donner le nom '}}) }}
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.email,{ 'label': 'Adresse Email/Mail Address :','attr':{'placeholder':'Donner l email '}})}}
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.username,{ 'label': 'Nom Utilisateur/username :','attr':{'placeholder':'Donner le nom utlisateur'}})}}
                                </div>
                            </div>
                            <br>
                            <div class="row">

                                <div class="col-md-7">
                                    {{ form_label(form.Image)}}:
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="input-group">
                                            <div class="form-control uneditable-input">
                                                <i class="fa fa-file fileupload-exists"></i>
                                                <span class="fileupload-preview"></span>
                                            </div>

                                            {{ form_errors(form.Image) }}


                                            <div class="input-group-btn">
                                                <div class="btn btn-light-grey btn-file">
                                                    <span class="fileupload-new"><i class="fa fa-folder-open-o"></i> Select image</span>
                                                    <span class="fileupload-exists"><i class="fa fa-folder-open-o"></i> Change</span>
                                                    {{ form_widget(form.Image) }}
                                                </div>

                                                <a href="#" class="btn btn-light-grey fileupload-exists" data-dismiss="fileupload">
                                                    <i class="fa fa-times"></i> Remove
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </div>

                            <br>
                            
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Civilite,{ 'label': 'Genre/Gendre :'})}}
                                </div>
                            </div>
                            <br>



                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Pays,{ 'label': 'Pays/Country :'})}}
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Discipline,{ 'label': 'Discipline :'})}}
                                </div>

                            </div> 
                            <br>
                            
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.Statut,{ 'label': 'Statut/Status :'})}}
                                </div></div>
                                  <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.plainPassword.first,{ 'label': 'Mot de Passe :'})}}
                                    
                                    </div>
                                </div> 
                                <br>
                                <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.plainPassword.second,{ 'label': 'Répéter le mot de passe :'})}}
                                </div>
                            </div> 
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    
                                    {{ form_rest(form) }}
                                    <style>
                                        .required:after { content:" *";
                                                          color:red; }
                                        </style>
                                    </div>
                            </div></div>
                                <br>
                                <button data-style="expand-left" class="btn btn-teal ladda-button">
                                <span class="ladda-label"> Ajouter un Administrateur </span>
                                <i class="fa fa-arrow-circle-left"></i>
                                <span class="ladda-spinner"></span>
                            </button>  <font color="red"><i class="fa fa-warning faa-flash animated"></i> 

                            champ obligatoire * </font> </div>
                          <style>
                 textarea, input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"],  input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"] {




                                    font-size: 14px;

                                    padding: 10px 10px;

                                    width:  800px ;
                                    margin-top: 10px;
                                    display: flow-root;}
                                select {

                                    width: 800px;
                                    padding: 15px;

                                }
                                 label {
                            font-size: 20px;
                            color: #222;
                        }
                </style>
                               


                            
                            {{ form_end(form) }}

                        

                    </div>
                </div>
            </div>
        </div>

{% endblock %}
