{% extends ":back:base.html.twig" %}
{% block title %} Article {% endblock  %}
{% block body %}
    <div class="container">
        <div class="row">
           <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="clip-home-2"></i>
                      <a href="{{path('tuto_frontoffice_homepage')}}">
                            Front Office
                        </a>
                    </li>
                    <li class="active">
                        <i><b>  Back Office </b> </i>
                    </li>
                    
                </ol>
            </div>
        </div>
        </div>
        {% include ":back:alert.html.twig" %}




        <div class="row">
            <div class="col-md-12">
                <!-- start: DYNAMIC TABLE PANEL -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-external-link-square"></i>
                        Liste des articles
                        <div class="panel-tools">
                            <a class="btn btn-xs btn-link panel-collapse collapses" href="#"> </a>
                            <a class="btn btn-xs btn-link panel-expand" href="#"> <i class="fa fa-resize-full"></i> </a>
                            <a href="{{path('tuto_article_ajout')}}" > <span class="glyphicon glyphicon-plus" aria-hidden="true" > </span> </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                            <thead>
                                <tr>
                                    <th class="center">Titre</th>

                                    <th class="center"> Mots Clés </th>

                                   
                                    <th class="center"> Année Publication </th>
                                     <th class="center"> Type Article </th>

                                     <th class="center"> Article </th>
                                      <th class="center"> Auteurs </th>

                                     <th class="center"> Action </th>

                                </tr>
                            </thead>
                            <tbody>
                                {% for article in articles %}
                                    <tr>
                                        <td class="center"> {{article.titre}}</td>

                                        <td class="center">{{article.motcle}}</td>
                                        <td class="center">{{article.annee}}</td>
                                         <td class="center">{{article.Type}}</td>

<td class="center"> <object data="{{ asset(article.assetPath)}}"  type="application/pdf" width="25%" height="25%" >

                                            </object>
                                            <p><a href="{{ asset(article.assetPath)}}">cliquez pour telecharger votre Article.</a> </p>

                                        </td>

                                       <td class="center">{{article.auteurs}}</td>


                                       

                                        <td td class="center">

                                            <a href="{{path('tuto_article_modif',{'id':article.id})}}" class="btn btn-xs btn-teal tooltips"  data-original-title="Modifier" data-placement="top"><i class="fa fa-edit"></i></a>



                                            <a href="{{path('tuto_article_supp',{'id':article.id})}}"  class="btn btn-xs btn-bricky tooltips"  data-original-title="Supprimer" data-placement="top" onclick="javascript:return(confirm('Voulez-vous  supprimer cette ligne??'))"><i class="fa fa-times fa fa-white"></i></a>

                                        </td>

                                    </tr>
                                {%endfor%}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end: DYNAMIC TABLE PANEL -->
            </div>
        </div>
    </div>
    {% endblock  %}
